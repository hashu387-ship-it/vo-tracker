// Prisma schema for VO Tracker application
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model VO {
  id                  Int      @id @default(autoincrement())
  subject             String
  submissionType      String   // VO, GenCorr, RFI, Email
  submissionReference String?
  responseReference   String?
  submissionDate      DateTime
  assessmentValue     Float?
  proposalValue       Float?
  approvedAmount      Float?
  status              String   @default("PendingWithFFC") // PendingWithFFC, PendingWithRSG, PendingWithRSGFFC, ApprovedAwaitingDVO, DVORRIssued
  vorReference        String?
  dvoReference          String?
  dvoIssuedDate         DateTime?
  proposedFileUrl       String?
  assessmentFileUrl     String?
  approvalFileUrl       String?
  dvoFileUrl            String?
  remarks               String?
  actionNotes         String?

  // File attachments for different approval stages
  ffcRsgProposedFile  String?  // Excel file for FFC/RSG Proposed (pending statuses)
  rsgAssessedFile     String?  // Excel file for RSG Assessed (approved)
  dvoRrApprovedFile   String?  // Excel file for DVO RR Approved (final)

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  isExcludedFromStats Boolean  @default(false)

  @@map("variation_orders")
}

model ActivityLog {
  id          Int      @id @default(autoincrement())
  userId      String   // Clerk User ID
  userName    String   // Display Name
  action      String   // CREATE, UPDATE, DELETE, UPLOAD
  entityType  String   // VO, FILE, etc.
  entityId    String   // ID reference
  details     String?  // Description of change
  createdAt   DateTime @default(now())

  @@map("activity_logs")
}

model PaymentApplication {
  id                      Int       @id @default(autoincrement())
  paymentNo               String    // e.g. "IPA 1", "AP01"
  paymentStatus           String    @default("Draft") // Draft, Submitted on ACONEX, Paid, Received
  description             String    // e.g. "Sept 20th 2023 â€“ Dec 25th 2023"
  grossAmount             Float
  advancePaymentRecovery  Float     @default(0)
  retention               Float     @default(0)
  vatRecovery             Float     @default(0)
  vat                     Float
  netPayment              Float

  submittedDate           DateTime?
  invoiceDate             DateTime? // Corresponds to "Tax invoice submitted"

  // Additional tracking fields
  ffcLiveAction           String?   // FFC Live Action status
  rsgLiveAction           String?   // RSG Live Action status
  approvalStatus          String?   // Secondary status (e.g. Received, Approved)
  remarks                 String?   // General remarks

  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  @@map("payment_applications")
}

model ProjectDetails {
  id                      Int       @id @default(autoincrement())
  projectCode             String    @unique // e.g. "R06-HW2C05-5020"
  projectName             String    // Optional project name
  contractor              String    // e.g. "First Fix"
  contractDate            DateTime  // e.g. "20-Sep-2023"

  // Contract values
  originalContractValue   Float
  revisedContractValue    Float

  // Advance payment details
  advancePaymentTotal     Float     // Total advance payment amount
  advancePaymentPercent   Float     @default(32.0) // e.g. 32%
  advanceDeductedTillDate Float     @default(0)
  advanceDeductedPercent  Float     @default(0)
  advanceBalance          Float     @default(0)
  advanceBalancePercent   Float     @default(0)

  // Retention details
  totalRetention          Float     @default(0)
  retentionPercent        Float     @default(5.0) // e.g. 5%
  retentionDeductedTillDate Float   @default(0)
  retentionDeductedPercent Float    @default(0)
  retentionBalance        Float     @default(0)
  retentionBalancePercent Float     @default(0)

  // Work summary
  totalWorkDone           Float     @default(0)
  totalWorkDonePercent    Float     @default(0)
  balanceWorkDone         Float     @default(0)
  balanceWorkDonePercent  Float     @default(0)

  receivedAmount          Float     @default(0)
  receivedPercent         Float     @default(0)

  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  @@map("project_details")
}
